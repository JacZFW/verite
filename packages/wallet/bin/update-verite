#!/usr/bin/env sh
#
# Updates ./src/lib/verite with the latest code from
# verite.
#
# Note: This script assumes verite is checked out
# next to this repository.
#
rm -rf ./src/lib/verite/lib ./src/lib/verite/types
cp -R ../verite/packages/verite/lib ./src/lib/verite
cp -R ../verite/packages/verite/types ./src/lib/verite
