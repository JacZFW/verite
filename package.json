{
  "name": "verity",
  "license": "MIT",
  "private": true,
  "contributors": [
    "Kim Hamilton Duffy (https://github.com/kimdhamilton",
    "Sean Neville (https://github.com/psnevio)",
    "Brice Stacey <brice@m2.xyz> (https://m2.xyz)",
    "Matt Venables <matt@m2.xyz> (https://m2.xyz)"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @verity/core -w @verity/demo-site",
    "build:verity": "npm run build --workspace @verity/core",
    "check": "run-s type-check lint test",
    "clean": "npm run clean --workspaces --if-present",
    "db:migrate": "npm run db:migrate --workspace @verity/demo-site",
    "db:reset": "npm run db:reset --workspace @verity/demo-site",
    "db:seed": "npm run db:seed --workspace @verity/demo-site",
    "db:studio": "npm run db:studio --workspace @verity/demo-site",
    "dev": "run-p dev:verity dev:site",
    "dev:site": "npm run dev --workspace @verity/demo-site",
    "dev:verity": "npm run dev --workspace @verity/core",
    "hardhat:node": "npm run hardhat:node --workspace @verity/contract",
    "hardhat:deploy": "npm run hardhat:deploy --workspace @verity/contract",
    "hardhat:faucet": "npm run hardhat:faucet --workspace @verity/contract",
    "hardhat:test": "npm run hardhat:test --workspace @verity/contract",
    "format": "npm run format --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "prepare": "npm run build:verity",
    "prisma": "npx -w @verity/demo-site prisma",
    "setup": "./bin/setup",
    "setup:ci": "npm run setup:ci --workspace @verity/demo-site",
    "start": "npm run start --workspace @verity/demo-site",
    "test": "npm test --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
