{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:verity": "npm run build --workspace @centre/verity",
    "check": "run-s type-check lint test",
    "clean": "npm run clean --workspaces",
    "db:migrate": "npm run db:migrate --workspace @centre/demo-site",
    "db:reset": "npm run db:reset --workspace @centre/demo-site",
    "db:seed": "npm run db:seed --workspace @centre/demo-site",
    "db:studio": "npm run db:studio --workspace @centre/demo-site",
    "dev": "run-p dev:verity dev:site",
    "dev:site": "npm run dev --workspace @centre/demo-site",
    "dev:verity": "npm run dev --workspace @centre/verity",
    "format": "npm run format --workspaces",
    "lint": "npm run lint --workspaces",
    "prepare": "npm run build:verity",
    "prisma": "npx -w @centre/demo-site prisma",
    "setup:ci": "npm run setup:ci --workspace @centre/demo-site",
    "site": "npm run dev --workspace @centre/demo-site",
    "test": "npm test --workspaces",
    "type-check": "npm run type-check --workspaces"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
